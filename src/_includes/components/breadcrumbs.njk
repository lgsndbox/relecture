{# Breadcrumbs component - renders computed breadcrumb trail #}
{# Logic moved to src/_data/eleventyComputed.js for better separation of concerns #}

{%- if breadcrumbs and breadcrumbs.length >= 1 -%}
<nav class="breadcrumbs" aria-label="{{ "accessibility.breadcrumbs" | t }}">
  <ol class="breadcrumbs-list">
    {%- for crumb in breadcrumbs %}
    <li class="breadcrumbs-item">
      {%- if crumb.current %}
      <span class="breadcrumbs-current" aria-current="page">{{ crumb.label }}</span>
      {%- else %}
      <a href="{{ crumb.url }}" class="breadcrumbs-link">{{ crumb.label }}</a>
      {%- endif %}
    </li>
    {%- endfor %}
  </ol>
</nav>
{%- endif -%}
