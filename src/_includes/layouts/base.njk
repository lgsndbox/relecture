{% from "components/theme-toggle.njk" import themeToggle %}
<!DOCTYPE html>
<html lang="{{ site.lang }}">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="color-scheme" content="light dark">
  <meta name="theme-color" content="{{ site.themeColor }}">

  {# Block AI training while allowing traditional search indexing #}
  <meta name="robots" content="noai, noimageai">

  {# Basic meta #}
  <title>{% if title %}{{ title }} | {{ site.name }}{% else %}{{ site.title }}{% endif %}</title>
  <meta name="description" content="{{ description | default(site.description) }}">
  <meta name="author" content="{{ author | default(site.author) }}">
  {% if keywords %}<meta name="keywords" content="{% if keywords is iterable and keywords is not string %}{{ keywords | join(', ') }}{% else %}{{ keywords }}{% endif %}">{% endif %}

  {# Canonical URL #}
  {% set pageUrl = canonicalUrl or (site.url + page.url) %}
  <link rel="canonical" href="{{ pageUrl }}">

  {# Open Graph #}
  <meta property="og:site_name" content="{{ site.name }}">
  <meta property="og:type" content="{% if layout == 'layouts/article.njk' %}article{% else %}website{% endif %}">
  <meta property="og:title" content="{{ title | default(site.title) }}">
  <meta property="og:description" content="{{ description | default(site.description) }}">
  <meta property="og:url" content="{{ pageUrl }}">
  <meta property="og:locale" content="{{ site.locale }}">
  <meta property="og:image" content="{{ site.url }}{{ socialImage }}">
  <meta property="og:image:width" content="{{ site.og.imageWidth }}">
  <meta property="og:image:height" content="{{ site.og.imageHeight }}">
  <meta property="og:image:alt" content="{{ imageAlt | default(title) }}">
  {% if layout == 'layouts/article.njk' and date %}
  <meta property="article:published_time" content="{{ date | isoDate }}T00:00:00Z">
  <meta property="article:author" content="{{ author | default(site.author) }}">
  {% if tags %}
    {% for tag in tags %}
  <meta property="article:tag" content="{{ tag }}">
    {% endfor %}
  {% endif %}
  {% endif %}

  {# Twitter Card #}
  <meta name="twitter:card" content="{{ site.twitter.card }}">
  <meta name="twitter:site" content="{{ site.twitter.handle }}">
  <meta name="twitter:title" content="{{ title | default(site.title) }}">
  <meta name="twitter:description" content="{{ description | default(site.description) }}">
  <meta name="twitter:image" content="{{ site.url }}{{ socialImage }}">
  <meta name="twitter:image:alt" content="{{ imageAlt | default(title) }}">

  {# JSON-LD Structured Data #}
  <script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "{% if layout == 'layouts/article.njk' %}Article{% else %}WebSite{% endif %}",
    "name": "{{ title | default(site.title) }}",
    "headline": "{{ title | default(site.title) }}",
    "description": "{{ description | default(site.description) }}",
    {% if layout == 'layouts/article.njk' %}
    "image": "{{ site.url }}{{ socialImage }}",
    "datePublished": "{{ date | isoDate }}T00:00:00Z",
    "author": {
      "@type": "Person",
      "name": "{{ author | default(site.author) }}"
    },
    "publisher": {
      "@type": "Organization",
      "name": "{{ site.publisher.name }}",
      "logo": {
        "@type": "ImageObject",
        "url": "{{ site.url }}{{ site.publisher.logo }}"
      }
    },
    {% endif %}
    "url": "{{ pageUrl }}"
  }
  </script>

  <link rel="icon" type="image/png" sizes="32x32" href="/images/icons/favicon-32x32.png">
  <link rel="icon" type="image/png" sizes="16x16" href="/images/icons/favicon-16x16.png">
  <link rel="apple-touch-icon" sizes="180x180" href="/images/icons/apple-touch-icon.png">
  <link rel="manifest" href="/site.webmanifest">

  {# Preload critical fonts for better performance #}
  <link rel="preload" href="/fonts/andada-pro-regular.woff2" as="font" type="font/woff2" crossorigin>
  <link rel="preload" href="/fonts/faculty-glyphic-regular.woff2" as="font" type="font/woff2" crossorigin>

  <link rel="stylesheet" href="{{ assets.css }}">
  <link rel="alternate" type="application/atom+xml" title="PAUSE - Flux RSS" href="/feed.xml">

  {# Apply saved theme ASAP to reduce flash #}
  <script>
    (function () {
      try {
        const themeColor = localStorage.getItem('theme');
        if (themeColor) document.documentElement.setAttribute('data-theme', themeColor);
      } catch (_) {}
    })();
  </script>

  {% block head %}{% endblock %}
</head>

<body>
  <a href="#main-content" class="skip-link">{{ "accessibility.skipToContent" | t }}</a>

  {# Hamburger menu toggle - CSS-only with checkbox hack #}
  <input type="checkbox" id="nav-toggle" class="nav-toggle-checkbox" aria-label="{{ "accessibility.openMenu" | t }}">

  <header class="site-header">
    <div class="header-top">
      <label for="nav-toggle" class="nav-toggle-label" aria-controls="main-nav">
        <svg aria-hidden="true" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <line x1="3" y1="12" x2="21" y2="12"></line>
          <line x1="3" y1="6" x2="21" y2="6"></line>
          <line x1="3" y1="18" x2="21" y2="18"></line>
        </svg>
      </label>

      <a href="/" class="site-title-link" aria-label="{{ "accessibility.homeLink" | t }}">
        <span class="site-title">{{ site.name }}</span>
        <span class="site-subtitle">{{ site.subname }}</span>
      </a>

      {# Utilities - hidden on mobile, shown on desktop #}
      <div class="header-utilities header-utilities-desktop">
        <a href="/recherche/" class="utility-link" aria-label="{{ "accessibility.searchLink" | t }}" title="{{ "nav.search" | t }}">
          <svg aria-hidden="true" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <circle cx="11" cy="11" r="8"></circle>
            <path d="m21 21-4.35-4.35"></path>
          </svg>
        </a>
        <a href="/tags/" class="utility-link" aria-label="{{ "accessibility.tagsLink" | t }}" title="{{ "nav.tags" | t }}">
          <svg aria-hidden="true" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M20.59 13.41l-7.17 7.17a2 2 0 0 1-2.83 0L2 12V2h10l8.59 8.59a2 2 0 0 1 0 2.82z"></path>
            <line x1="7" y1="7" x2="7.01" y2="7"></line>
          </svg>
        </a>
        {# Theme toggle - inside utilities on desktop #}
        {{ themeToggle("theme-toggle-desktop") }}
      </div>

      {# Theme toggle - mobile only, separate #}
      {{ themeToggle("theme-toggle-mobile") }}
    </div>
  </header>

  <div class="sticky-nav-container">
    <nav class="main-navigation" aria-label="Navigation principale">

      <ul class="main-nav" id="main-nav">
        <li class="nav-item nav-item--home"><a href="/" class="home-link" aria-label="{{ "nav.home" | t }}" {% if page.url == '/' %}aria-current="page"{% endif %}>
          <svg aria-hidden="true" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="m3 9 9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
            <polyline points="9 22 9 12 15 12 15 22"></polyline>
          </svg>
        </a></li>
        <li class="nav-item"><a href="/themes/" {% if page.url.startsWith('/themes') %}aria-current="page"{% endif %}>{{ "nav.themes" | t }}</a></li>
        <li class="nav-item"><a href="/standalone/" {% if page.url.startsWith('/standalone') %}aria-current="page"{% endif %}>{{ "nav.standalone" | t }}</a></li>
        {% for category in categories %}
          <li class="nav-item {% if loop.first %}nav-item--strong-separator{% endif %}"><a href="/{{ category.slug }}/" {% if page.url.startsWith('/' + category.slug) %}aria-current="page"{% endif %}>{{ category.name }}</a></li>
        {% endfor %}

        {# Mobile utilities - only shown on mobile #}
        <li class="nav-separator" role="presentation" aria-hidden="true"></li>
        <li class="nav-mobile-only"><a href="/recherche/" {% if page.url.startsWith('/recherche') %}aria-current="page"{% endif %}><svg aria-hidden="true" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="11" cy="11" r="8"></circle><path d="m21 21-4.35-4.35"></path></svg> {{ "nav.search" | t }}</a></li>
        <li class="nav-mobile-only"><a href="/tags/" {% if page.url.startsWith('/tags') %}aria-current="page"{% endif %}>
          <svg aria-hidden="true" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M20.59 13.41l-7.17 7.17a2 2 0 0 1-2.83 0L2 12V2h10l8.59 8.59a2 2 0 0 1 0 2.82z"></path>
            <line x1="7" y1="7" x2="7.01" y2="7"></line>
          </svg> {{ "nav.tags" | t }}</a></li>
      </ul>

      <label for="nav-toggle" class="nav-overlay" aria-hidden="true"></label>
    </nav>

    <div class="breadcrumbs-container">
      {% include "components/breadcrumbs.njk" %}
    </div>
  </div>

  <main id="main-content" tabindex="-1">
    {# Prefer a single page-level H1 here, per template/page #}
    {% block content %}{{ content | safe }}{% endblock %}
  </main>

  <footer>
