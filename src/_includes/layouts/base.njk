      <div class="footer-info">
        <span class="footer-tagline">{{ "footer.tagline" | t }}</span>
        <span class="footer-separator"> Â· </span>
        <span class="footer-copyright">&copy; {{ year }} {{ "footer.copyright" | t }}</span>
      </div>

      <nav class="footer-nav" aria-label="{{ "accessibility.footerNav" | t }}">
        <a href="/culture/a-propos/">{{ "footer.links.about" | t }}</a>
