# Security Headers for Netlify/Cloudflare Pages
# This file configures HTTP security headers for your site

# Apply to all pages
/*
  # Prevent clickjacking attacks
  X-Frame-Options: DENY

  # Prevent MIME type sniffing
  X-Content-Type-Options: nosniff

  # Enable XSS protection (legacy browsers)
  X-XSS-Protection: 1; mode=block

  # Control referrer information
  Referrer-Policy: strict-origin-when-cross-origin

  # Permissions Policy (formerly Feature Policy)
  Permissions-Policy: camera=(), microphone=(), geolocation=(), interest-cohort=()

  # Content Security Policy
  # Note: Adjust this based on your needs. Current config allows Google Fonts.
  Content-Security-Policy: default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; img-src 'self' data: https:; connect-src 'self'; frame-ancestors 'none'; base-uri 'self'; form-action 'self'

  # Strict Transport Security (HTTPS only)
  # Uncomment the line below once you have HTTPS enabled
  # Strict-Transport-Security: max-age=63072000; includeSubDomains; preload

# Cache control for static assets
# With content-based hashing (main.ea165d65.css), we can cache aggressively
# because the URL changes when the content changes
/css/*
  Cache-Control: public, max-age=31536000, immutable

/js/*
  Cache-Control: public, max-age=31536000, immutable

/images/*
  Cache-Control: public, max-age=31536000, immutable

/fonts/*
  Cache-Control: public, max-age=31536000, immutable

# Don't cache HTML pages (they contain references to hashed assets)
/*.html
  Cache-Control: public, max-age=0, must-revalidate

# Root page
/
  Cache-Control: public, max-age=0, must-revalidate

# Don't aggressively cache dynamic content
/feed.xml
  Cache-Control: public, max-age=3600, must-revalidate

/robots.txt
  Cache-Control: public, max-age=86400

/sitemap.xml
  Cache-Control: public, max-age=3600, must-revalidate

# Source maps should be cached like their source files
/*.map
  Cache-Control: public, max-age=31536000, immutable

# Pagefind search index - cache but allow updates
/pagefind/*
  Cache-Control: public, max-age=86400, must-revalidate
