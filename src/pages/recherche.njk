<div class="search-page">
  <h1>Rechercher sur PAUSE</h1>
  <div id="search"></div>
</div>

<link href="/pagefind/pagefind-ui.css" rel="stylesheet">
<script src="/pagefind/pagefind-ui.js"></script>
<style>
  /* Override Pagefind UI for dark mode support */
  #search .pagefind-ui__form,
  #search .pagefind-ui__search-input,
  #search .pagefind-ui__results,
  #search .pagefind-ui__result {
    background-color: var(--color-background);
    color: var(--color-text);
  }

  #search .pagefind-ui__search-input {
    border: 1px solid var(--color-border);
  }

  #search .pagefind-ui__result {
    border: 1px solid var(--color-border);
  }

  #search .pagefind-ui__result:hover {
    border-color: var(--color-primary);
    background-color: var(--color-background-alt);
  }

  #search .pagefind-ui__result-link,
  #search .pagefind-ui__result-title {
    color: var(--color-text);
  }

  #search .pagefind-ui__result-link {
    color: var(--color-primary);
  }

  #search .pagefind-ui__result-excerpt {
    color: var(--color-text-muted);
  }

  #search .pagefind-ui__result-excerpt mark {
    background-color: var(--color-primary);
    color: white;
  }

  #search .pagefind-ui__message {
    color: var(--color-text-muted);
  }

  #search .pagefind-ui__button {
    background-color: var(--color-primary);
    color: white;
  }

  #search .pagefind-ui__button:hover {
    background-color: var(--color-primary-dark);
  }

  #search .pagefind-ui__search-clear {
    background-color: transparent;
    color: var(--color-text-muted);
    border: none;
    padding: 0.5rem;
    cursor: pointer;
    transition: color 0.2s;
  }

  #search .pagefind-ui__search-clear:hover {
    color: var(--color-primary);
  }
</style>
<script>
  window.addEventListener('DOMContentLoaded', () => {
    new PagefindUI({
      element: "#search",
      showSubResults: true,
      translations: {
        placeholder: "Rechercher des articles...",
        clear_search: "Effacer",
        load_more: "Charger plus de résultats",
        search_label: "Rechercher sur ce site",
        filters_label: "Filtres",
        zero_results: "Aucun résultat pour [SEARCH_TERM]",
        many_results: "[COUNT] résultats pour [SEARCH_TERM]",
        one_result: "[COUNT] résultat pour [SEARCH_TERM]",
        alt_search: "Aucun résultat pour [SEARCH_TERM]. Résultats pour [DIFFERENT_TERM] à la place",
        search_suggestion: "Aucun résultat pour [SEARCH_TERM]. Essayez l'une de ces recherches:",
        searching: "Recherche en cours pour [SEARCH_TERM]..."
      }
    });
  });
</script>
