---
pagination:
  data: categories
  size: 1
  alias: category
permalink: "/{{ category.slug }}/"
layout: layouts/base.njk
eleventyComputed:
  title: "{{ category.name }}"
  description: "{{ category.description }} - Explorez tous les articles de la catégorie {{ category.name }} dans PAUSE"
  categorySlug: "{{ category.slug }}"
---

{% set categoryId = category.slug %}
{% set categoryArticles = collections.articlesByCategory | getArticlesByCategory(categoryId) | reverse %}

<div class="category-page">
    <header class="page-header">
        <h1>{{ category.name }}</h1>
        {% if category.description %}
        <p class="page-header-description">{{ category.description }}</p>
        {% endif %}
        {% if categoryArticles.length > 0 %}
        <p class="articles-count">{{ categoryArticles.length }} article{% if categoryArticles.length > 1 %}s{% endif %}</p>
        {% endif %}
    </header>

    {% if categoryArticles.length > 0 %}
    <section class="category-articles-section">
        <div class="articles-grid">
            {% for article in categoryArticles %}
            {% articleCard article, {showThemeBadge: true} %}
            {% endfor %}
        </div>
    </section>
    {% else %}
    <section class="empty-state">
        <p>Aucun article n'a encore été publié dans cette catégorie.</p>
    </section>
    {% endif %}
</div>
