---
pagination:
  data: collections.authorsArray
  size: 1
  alias: authorData
permalink: "/authors/{{ authorData[1].slug }}/"
layout: layouts/base.njk
eleventyComputed:
  title: "{% if authorData[1].seo and authorData[1].seo.title %}{{ authorData[1].seo.title }}{% else %}{{ authorData[1].name }}{% endif %}"
  description: "{% if authorData[1].seo and authorData[1].seo.description %}{{ authorData[1].seo.description }}{% else %}Tous les articles de {{ authorData[1].name }} dans PAUSE - {{ authorData[1].articles.length }} article{% if authorData[1].articles.length > 1 %}s{% endif %} publiÃ©{% if authorData[1].articles.length > 1 %}s{% endif %}{% endif %}"
  socialImage: "{% if authorData[1].image %}{{ authorData[1].image }}{% else %}/images/og-default.jpg{% endif %}"
  imageAlt: "{% if authorData[1].imageAlt %}{{ authorData[1].imageAlt }}{% else %}{{ authorData[1].name }}{% endif %}"
  authorSlug: "{{ authorData[1].slug }}"
---

{% set authorSlug = authorData[0] %}
{% set author = authorData[1] %}

<div class="author-page">
    <header class="author-page-header">
        <div class="author-page-header__content">
            {% if author.image %}
            <div class="author-page-header__image">
                <img src="{{ author.image }}" alt="{{ author.imageAlt or author.name }}" loading="lazy">
            </div>
            {% endif %}

            <div class="author-page-header__info">
                <h1>{{ author.name }}</h1>

                {% if author.bio %}
                <p class="author-bio">{{ author.bio }}</p>
                {% endif %}

                <p class="author-article-count">{{ author.articles.length }} {{ ("common.article" if author.articles.length == 1 else "common.articles") | t }} {{ ("common.published" if author.articles.length == 1 else "common.publishedPlural") | t }}</p>

                {% if author.website or author.social %}
                <div class="author-links">
                    {% if author.website %}
                    <a href="{{ author.website }}" class="author-link author-link--website" target="_blank" rel="noopener noreferrer">
                        <svg class="icon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <circle cx="12" cy="12" r="10"></circle>
                            <line x1="2" y1="12" x2="22" y2="12"></line>
                            <path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"></path>
                        </svg>
                        <span>Site web</span>
                    </a>
                    {% endif %}

                    {% if author.social %}
                        {% if author.social.twitter %}
                        <a href="https://twitter.com/{{ author.social.twitter.replace('@', '') }}" class="author-link author-link--twitter" target="_blank" rel="noopener noreferrer">
                            <svg class="icon" width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                                <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
                            </svg>
                            <span>Twitter</span>
                        </a>
                        {% endif %}

                        {% if author.social.mastodon %}
                        {% set mastodonParts = author.social.mastodon.split('@') %}
                        {% set mastodonUser = mastodonParts[1] %}
                        {% set mastodonServer = mastodonParts[2] %}
                        <a href="https://{{ mastodonServer }}/@{{ mastodonUser }}" class="author-link author-link--mastodon" target="_blank" rel="noopener noreferrer me">
                            <svg class="icon" width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                                <path d="M21.327 8.566c0-4.339-2.843-5.61-2.843-5.61-1.433-.658-3.894-.935-6.451-.956h-.063c-2.557.021-5.016.298-6.45.956 0 0-2.843 1.272-2.843 5.61 0 .993-.019 2.181.012 3.441.103 4.243.778 8.425 4.701 9.463 1.809.479 3.362.579 4.612.51 2.268-.126 3.541-.809 3.541-.809l-.075-1.646s-1.621.511-3.441.449c-1.804-.062-3.707-.194-3.999-2.409a4.523 4.523 0 0 1-.04-.621s1.77.433 4.014.536c1.372.063 2.658-.08 3.965-.236 2.506-.299 4.688-1.843 4.962-3.254.434-2.223.398-5.424.398-5.424zm-3.353 5.59h-2.081V9.057c0-1.075-.452-1.62-1.357-1.62-1 0-1.501.647-1.501 1.927v2.791h-2.069V9.364c0-1.28-.501-1.927-1.502-1.927-.905 0-1.357.546-1.357 1.62v5.099H6.026V8.903c0-1.074.273-1.927.823-2.558.566-.631 1.307-.955 2.228-.955 1.065 0 1.872.409 2.405 1.228l.518.869.519-.869c.533-.819 1.34-1.228 2.405-1.228.92 0 1.662.324 2.228.955.549.631.822 1.484.822 2.558v5.253z"/>
                            </svg>
                            <span>Mastodon</span>
                        </a>
                        {% endif %}

                        {% if author.social.linkedin %}
                        <a href="https://linkedin.com/in/{{ author.social.linkedin }}" class="author-link author-link--linkedin" target="_blank" rel="noopener noreferrer">
                            <svg class="icon" width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                                <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                            </svg>
                            <span>LinkedIn</span>
                        </a>
                        {% endif %}

                        {% if author.social.github %}
                        <a href="https://github.com/{{ author.social.github }}" class="author-link author-link--github" target="_blank" rel="noopener noreferrer">
                            <svg class="icon" width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                                <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                            </svg>
                            <span>GitHub</span>
                        </a>
                        {% endif %}
                    {% endif %}
                </div>
                {% endif %}
            </div>
        </div>
    </header>

    {% if author.articles and author.articles.length > 0 %}
    <section class="author-articles-list">
        <h2>{{ "article.articles" | t }}</h2>

        <div class="articles-grid">
            {% for article in author.articles %}
            {% articleCard article, {showThemeBadge: true, imageSizes: "(min-width: 768px) 30vw, 100vw"} %}
            {% endfor %}
        </div>
    </section>
    {% endif %}
</div>
